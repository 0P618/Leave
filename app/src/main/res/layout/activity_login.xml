<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/normal_space">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_close_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="学号登陆"
        android:textColor="@color/colorSecondary"
        android:textSize="28sp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_space"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学号"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_space"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入学号"
                android:inputType="number"
                android:lines="1"
                android:padding="@dimen/normal_space" />

            <ImageView
                android:id="@+id/iv_clear_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/normal_space"
                android:src="@drawable/ic_close_black_24dp"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_line_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:height="1dp"
            android:background="@color/colorSecondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_space"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_space"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:padding="@dimen/normal_space" />

            <ImageView
                android:id="@+id/iv_clear_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/normal_space"
                android:src="@drawable/ic_close_black_24dp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_pwd_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:padding="@dimen/normal_space"
                android:src="@drawable/ic_visibility_off_black_24dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_line_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:height="1dp"
            android:background="@color/gainsboro" />

        <CheckBox
            android:id="@+id/cb_login_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_space"
            android:checked="true"
            android:text="保持登陆" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_space"
            android:layout_marginRight="@dimen/normal_space"
            android:layout_marginTop="25dp"
            android:background="@drawable/default_fill_big"
            android:gravity="center"
            android:padding="@dimen/normal_space"
            android:text="登陆"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_big_little" />

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_space"
            android:gravity="center"
            android:text="遇到问题？"
            android:textColor="@color/colorSecondary"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>